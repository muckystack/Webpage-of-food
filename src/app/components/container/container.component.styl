primary-color = #FEB618
secondary-color = #00BE4C

.global-container
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color primary-color
    display flex
    flex-flow row wrap
    justify-content: center
    align-items: center
    overflow: auto
    .green
        position: absolute
        background-color: secondary-color
        top 0
        right: 0
        width: 50%
        height: 100%
    .center
        position absolute
        width: 100%
        height: 600px
        max-width 1200px
        background-color: white
        display: flex
        flex-flow: row wrap
        .body
            // background-color: gray
            width: 100%
            max-width 50%
            height 100%
            display: flex
            flex-flow: row nowrap
            position relative
            .products
                // background-color: red;
                position absolute
                width: 100%
                height: 100%
                display: flex
                flex-flow: row nowrap
                .container
                    padding: 35px
                    width: 100%
                    // background-color: green
                    height: 100%
                    display: flex
                    flex-flow: column nowrap
                    justify-content: space-between
                    nav
                        max-width 370px
                        display: flex
                        flex-flow: row nowrap
                        justify-content: space-between
                    .description
                        h1
                            font-size: 55px
                        p
                            margin-top: 25px
                        
                        button
                            cursor pointer
                            width: 100%
                            max-width 200px
                            background-color: primary-color
                            line-height: 40px
                            margin-top: 25px
                            border: none
                            color white
                            font-weight: bold
                    .hot-desserts
                        display: flex
                        flex-flow: row nowrap
        .restaurants
            width: 100%
            max-width: 50%
            height: 100%
            background-color: primary-color
            .container-restaurants
                position relative
                width: 100%
                height 100%
                img
                    width: 100%
                    height 100%
                    object-fit: cover
                    position absolute
                .details
                    position: absolute
                    width: 100%
                    height: 100%
                    // background-color: blue
                    display: flex
                    flex-flow: column nowrap
                    justify-content: space-between
                section, .navbar
                    padding: 35px
                .navbar
                    display: flex
                    flex-flow: row nowrap
                    justify-content: flex-end
                    .search
                        display: flex
                        flex-flow: row nowrap
                        align-items: center
                        margin-right: 25px
                        color white
                        span
                            margin-right: 7px
                        input
                            width: 50px
                            border: none
                            background-color: transparent
                            color white
                            font-weight: bold
                    button
                        background-color: white
                        color primary-color
                        line-height: 30px
                        width: 100px
                        font-weight: bold
                        border: none
                        cursor pointer
                section
                    // background-color: blue
                    padding-bottom: 10px
                    overflow auto
                    display: flex
                    flex-flow: row wrap

@media (max-width 1000px)
    .global-container
        .center
            flex-flow: column nowrap
            height 2000px
            .body, .restaurants
                max-width none
                height 1000px