primary-color = #FEB618
secondary-color = #00BE4C

.global-container
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color primary-color
    display flex
    flex-flow row nowrap
    justify-content: center
    align-items: center
    .green
        position: absolute
        background-color: secondary-color
        top 0
        right: 0
        width: 50%
        height: 100%
    .center
        position absolute
        width: 100%
        height: 600px
        max-width 1200px
        background-color: white