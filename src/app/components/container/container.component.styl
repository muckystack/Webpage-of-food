primary-color = #FEB618
secondary-color = #00BE4C

.global-container
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color primary-color
    display flex
    flex-flow row nowrap
    justify-content: center
    align-items: center
    .green
        position: absolute
        background-color: secondary-color
        top 0
        right: 0
        width: 50%
        height: 100%
    .center
        position absolute
        width: 100%
        height: 600px
        max-width 1200px
        background-color: white
        display: flex
        flex-flow: row wrap
        .body
            background-color: gray
            width: 50%
            height 100%
            display: flex
            flex-flow: row nowrap
            position relative
            .products
                // background-color: red;
                position absolute
                width: 100%
                height: 100%
                display: flex
                flex-flow: row nowrap
                .container
                    padding: 30px
                    width: 100%
                    // background-color: green
                    height: 100%
                    display: flex
                    flex-flow: column nowrap
                    justify-content: space-between
                    nav
                        max-width 370px
                        display: flex
                        flex-flow: row nowrap
                        justify-content: space-between
                    .description
                        h1
                            font-size: 55px
                        p
                            margin-top: 25px
                        
                        button
                            cursor pointer
                            width: 100%
                            max-width 200px
                            background-color: primary-color
                            line-height: 40px
                            margin-top: 25px
                            border: none
                            color white
                            font-weight: bold
                    .hot-desserts
                        display: flex
                        flex-flow: row nowrap